{erl_opts, [debug_info]}.

{deps, [
    {epgsql, "4.6.1"},
    {mysql, "1.8.0"},
    {esqlite, "0.8.0"},
    {poolboy, "1.5.2"},
    {jsx, "3.1.0"}
]}.

{shell, [
    {config, "config/sys.config"},
    {apps, [eorm]}
]}.

{project_plugins, [
    {rebar3_hex, "~> 7.0.7"},
    {rebar3_format, "~> 1.3.0"}
]}.

{alias, [
    {test, [compile, eunit, ct]},
    {check, [compile, xref, dialyzer, eunit, ct]}
]}.

{profiles, [
    {test, [
        {deps, [
            {meck, "0.9.2"}
        ]},
        {erl_opts, [debug_info, export_all]}
    ]}
]}.